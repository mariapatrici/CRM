<h2>Iniciar Sesión</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<form class="dropdown-menu p-4">
      <div class="form-control">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Correo",
                    placeholder: "tucorreo@domino.com",
                    input_html: { autocomplete: "email" } %>
      </div>
      <div type="password" class="form-control">
      <%= f.input :password,
                  required: false,
                  placeholder: "********************************",
                  label: "Contraseña",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  label: "Recuérdame",
                  as: :boolean if devise_mapping.rememberable? %>
      </div>

    <div type="submit" class="form-actions btn btn-gradient">
      <%= f.button :submit, "Ingresar" %>
    </div>
  <% end %>
</form>
